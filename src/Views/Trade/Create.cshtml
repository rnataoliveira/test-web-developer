@model Trading.Models.Trade

@{
    ViewData["Title"] = "Negociação de Mercadoria";
}

<div asp-validation-summary="ModelOnly"></div>
<form method="post" asp-route="SaveTrade">
    <div class="form-group col-lg-12">
        <label asp-for="Code">Código </label>
        <input asp-for="Code" type="text" class="form-control" placeholder="Código da Mercadoria">
        <span asp-validation-for="Code"></span>
    </div>
    <div class="form-group col-lg-12">
        <label asp-for="Name">Nome</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Nome da Mercadoria">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group col-lg-12">
        <label asp-for="Type">Tipo</label>
        <input asp-for="Type" type="text" class="form-control" placeholder="Tipo da Mercadoria">
        <span asp-validation-for="Type"></span>
    </div>
    <div class="form-group row col-lg-12">
        <div class="form-group col-lg-6">
            <label asp-for="Quantity">Quantidade</label>
            <input asp-for="Quantity" type="text" class="form-control" placeholder="Quantidade da Mercadoria">
            <span asp-validation-for="Quantity"></span>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="Price">Preço</label>
            <input asp-for="Price" type="text" class="form-control" placeholder="Preço da Mercadoria">
            <span asp-validation-for="Price"></span>
        </div>
    </div>
    <div class="form-group row col-lg-12">
        <label class="col-form-legend col-sm-2">Tipo do Negócio</label>
        <div class="col-lg-12">
            <div class="form-check">
                <label asp-for="BusinessType" class="form-check-label">
                    <input asp-for="BusinessType" class="form-check-input" type="radio" value="Buy">
                    Compra
                </label>
            </div>
            <div class="form-check">
                <label asp-for="BusinessType" class="form-check-label">
                    <input asp-for="BusinessType" class="form-check-input" type="radio" value="Sell">
                    Venda
                </label>
            </div>
            <span asp-validation-for="BusinessType"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-secondary col-lg-12">Confirmar</button>
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}