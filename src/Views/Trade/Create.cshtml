@{
    ViewData["Title"] = "Create";
}
<form method="post" asp-action="Create" asp-route="">
    <div class="form-group col-lg-12">
        <label for="codigoDaMercadirua">Código </label>
        <input type="text" class="form-control" name="codigoDaMercadoria" id="codigoDaMercadoria" placeholder="Código da Mercadoria" required>
    </div>
    <div class="form-group col-lg-12">
        <label for="tipoDaMercadoria">Nome</label>
        <input type="text" class="form-control" name="NomeDaMercadoria" id="NomeDaMercadoria" placeholder="Nome da Mercadoria" required>
    </div>
    <div class="form-group col-lg-12">
        <label for="tipoDaMercadoria">Tipo</label>
        <input type="text" class="form-control" name="tipoDaMercadoria" id="tipoDaMercadoria" placeholder="Tipo da Mercadoria" required>
    </div>
    <div class="form-group row col-lg-12">
        <div class="form-group col-lg-6">
            <label for="quantidadeDaMercadoria">Quantidade</label>
            <input type="text" class="form-control" name="quantidadeDaMercadoria" id="quantidadeDaMercadoria" placeholder="Quantidade da Mercadoria" required>
        </div>
        <div class="form-group col-lg-6">
            <label for="precoDaMercadoria">Preço</label>
            <input type="text" class="form-control" name="precoDaMercadoria" id="precoDaMercadoria" placeholder="Preço da Mercadoria" maxlength="15" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" required>
        </div>
    </div>

    <label class="col-form-legend col-sm-2">Tipo do Negócio</label>
    <div class="col-lg-12">
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="tipoNegocio" id="tpNegocio1" value="option1" checked>
                Compra
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="tipoNegocio" id="tipoNegocio2" value="option2">
                Venda
            </label>
        </div>
        <button type="button" class="btn btn-secondary col-lg-12 confirmation-btn">Confirmar</button>
    </div>
</form>