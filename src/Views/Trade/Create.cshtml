@model Trading.Models.Trade

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-route="CreateTrade">
    <div class="form-group col-lg-12">
        <label asp-for="Code">Código </label>
        <input asp-for="Code" type="text" class="form-control" placeholder="Código da Mercadoria" required>
    </div>
    <div class="form-group col-lg-12">
        <label asp-for="Name">Nome</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Nome da Mercadoria" required>
    </div>
    <div class="form-group col-lg-12">
        <label asp-for="Type">Tipo</label>
        <input asp-for="Type"  type="text" class="form-control" placeholder="Tipo da Mercadoria" required>
    </div>
    <div class="form-group row col-lg-12">
        <div class="form-group col-lg-6">
            <label asp-for="Quantity">Quantidade</label>
            <input asp-for="Quantity" type="text" class="form-control" placeholder="Quantidade da Mercadoria" required>
        </div>
        <div class="form-group col-lg-6">
            <label asp-for="Price">Preço</label>
            <input asp-for="Price" type="text" class="form-control" placeholder="Preço da Mercadoria" maxlength="15" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" required>
        </div>
    </div>

    <label class="col-form-legend col-sm-2">Tipo do Negócio</label>
    <div class="col-lg-12">
        <div class="form-check">
            <label asp-for="BusinessType" class="form-check-label">
                <input asp-for="BusinessType" class="form-check-input" type="radio" value="Buy" checked>
                Compra
            </label>
        </div>
        <div class="form-check">
            <label asp-for="BusinessType" class="form-check-label">
                <input asp-for="BusinessType" class="form-check-input" type="radio" value="Sell">
                Venda
            </label>
        </div>
        <button type="button" class="btn btn-secondary col-lg-12 confirmation-btn">Confirmar</button>
    </div>
</form>